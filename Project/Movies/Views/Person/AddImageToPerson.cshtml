@{
    ViewBag.Title = "AddImageToPerson";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Background"] = "background1";
}
@model Movies.Models.AddImageToPersonModel


<div class="centerMe">
    
    <h1>@ViewBag.Title</h1>
    <br/><br/>

    @using (Html.BeginForm("UploadImage", "Person", FormMethod.Post,
        new { enctype = "multipart/form-data" }))
    {  
        <label for="browse">Upload image to person</label> <br/>
        <input type="file" name="file" id="file" style="display: none" /> 
        <input type="button" name="browse" value="browse" onclick="bbc()" class="input-submit"/>
        @Html.EditorForModel()<br/>
        <input type="submit" value="upload" class="input-submit" /> 
    }


    <script type="text/javascript"> 
        function bbc() {
            $("#file").click();
        }
    </script>
    
</div>
