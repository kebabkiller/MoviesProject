<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - SIMILAR.to</title>
    @*<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />*@
    <meta name="viewport" content="width=device-width" />d
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/moviesScript.js")

</head>
<body class="background">

    <div id="MainBarName">
        <a href='@Url.Action("Index", "Home")'>
            <img src='@Url.Content("~/Content/images/similarToGreen.png")' class="TransparentName" /></a>
    </div>

    <div id="body">
        @RenderSection("featured", required: false)
        <section>
            @RenderBody()
        </section>
    </div>

    <div id="MainBar">
        <ul id="MainBarList">
            <li><span class="MainBarListLink" id="SearchBarLink">search</span></li>
            <li>@Html.ActionLink("add movie", "", "", null, new { @class = "MainBarListLink" })</li>
            <li>@Html.ActionLink("sign up", "Registration", "User", null, new { @class = "MainBarListLink" })</li>
            <li>@Html.ActionLink("sign in", "LogIn", "User", null, new { @class = "MainBarListLink" })</li>
        </ul>
    </div>

    <div id='SearchBlur' style='display: none;'>

        <div id="searchField">
            <input type="text" id="searchInput">
            <p id="incentive">type what to find</p>
            <div class="lineSeparator"></div>
        </div>

        <div id="moviesResult">
            <p>search results for movies</p>

        </div>

        <div id="peopleResult">
            <p>search results for people</p>

        </div>

        <div id='CloseSearchBlur'>x</div>

    </div>

    <div class="Footer">
        <ul id="FotterMenuList">
            <li><a href="#" class="MainBarListLink">Kontakt</a></li>
            <li><a href="#" class="MainBarListLink">Regulamin</a></li>
            <li><a href="#" class="MainBarListLink">O serwisie</a></li>
            <li><a href="#" class="MainBarListLink">Autorzy</a></li>
            <li><a href="#" class="MainBarListLink">Polityka prywatnosci</a></li>
        </ul>
        <img src='@Url.Content("~/Content/images/cameraRoll-footer.png")' id="FooterLogo"/>
        <span id="Copyright">&copy; @DateTime.Now.Year similar.to</span>
    </div>

</body>
</html>

